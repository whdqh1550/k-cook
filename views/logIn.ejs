<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("includes/head") %>
    <script>
      function loadCSS(href, before, media) {
        var doc = window.document;
        var ss = doc.createElement("link");
        var ref = before || doc.getElementsByTagName("script")[0];
        ss.rel = "stylesheet";
        ss.href = href;
        ss.media = "only x";
        ref.parentNode.insertBefore(ss, ref);
        setTimeout(function () {
          ss.media = media || "all";
        });
        return ss;
      }
      // Load the specified stylesheets asynchronously

      loadCSS("https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&family=Unbounded:wght@300;700&display=swap");
      loadCSS("/css/header.css");
      loadCSS("/css/footer.css");


    </script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2798057846705714"
      crossorigin="anonymous"></script>
    <title>K-cook | LogIn</title>
    <link rel="stylesheet" href="css/login.css" />
    <script src="script/recaptcha.js"></script>
    <script>
      function onLoadCallback() {
        grecaptcha.render('divRecaptcha', {
          sitekey: '6LctRqwkAAAAAEw-TuBTasVIZKAeanmxi2Ca10-c',
        });
      }
    </script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onLoadCallback&render=explicit" async defer></script>

</head>

<body>
  <%- include("includes/header") %>
    <main>
      <section>
        <div id="container">
          <h2 id="header">
            <span id="logor">K-</span><span id="logob">cook</span>
          </h2>
          <% if(inputData.hasError){ %>
            <p id="error-message">
              <%= inputData.message %>
            </p>
            <% } %>
              <form action="/logIn" method="POST">
                <label for="userName">User Name</label>
                <input type="text" placeholder="User Name" id="userName" name="userName"
                  value="<%= inputData.username  %>" />
                <label for="password">Password</label>
                <input type="password" placeholder="Password" id="password" name="password" />
                <button class="btn">Log In</button>
                <!-- <a href="/signUp" class="btn">Sign Up</a> -->
                <div id="divRecaptcha" name="divRecaptcha" class="g-recaptcha"></div>

              </form>
        </div>
      </section>
    </main>
    <footer><%- include("includes/footer") %></footer>
</body>

</html>