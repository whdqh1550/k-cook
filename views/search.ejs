<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("includes/head") %>
        <script>
            function loadCSS(href, before, media) {
                var doc = window.document;
                var ss = doc.createElement("link");
                var ref = before || doc.getElementsByTagName("script")[0];
                ss.rel = "stylesheet";
                ss.href = href;
                ss.media = "only x";
                ref.parentNode.insertBefore(ss, ref);
                setTimeout(function () {
                    ss.media = media || "all";
                });
                return ss;
            }
            // Load the specified stylesheets asynchronously

            loadCSS("https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&family=Unbounded:wght@300;700&display=swap");
            loadCSS("/css/header.css");
            loadCSS("/css/footer.css");


        </script>
        <script async
            src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2798057846705714"
            crossorigin="anonymous"></script>
        <title>k-cook | Search</title>
        <link rel="stylesheet" href="css/menus.css">

        <link rel="stylesheet" href="css/search.css">
</head>

<body>
    <%- include("includes/header") %>
        <main>
            <div id="search">
                <form action="/search" method="GET" id="search-form">
                    <input type="text" placeholder="Search by title" name="keyword">
                    <button><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>

            <section id="container">
                <% if(recipes.length> 0){ %>
                    <ul>
                        <% for (recipe of recipes){ %>
                            <%- include("includes/card",{item:recipe, uri:recipe.category}) %>
                                <% } %>
                    </ul>
                    <% } %>
                        <% if(recipes.length<=0 ){ %>
                            <h1 id="nores">No result found</h1>
                            <% } %>
            </section>
        </main>


</body>

</html>